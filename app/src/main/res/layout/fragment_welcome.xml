<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mike.ecareapp.Fragments.WelcomeFragment"
    android:background="#fff">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/hospital2"/>

        <!--<customfonts.MyTextView-->
        <!--android:id="@+id/head"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="Welcome"-->
        <!--android:textColor="#000"-->
        <!--android:textSize="34dp"-->
        <!--android:gravity="center"-->
        <!--android:layout_centerInParent="true"-->
        <!--/>-->


        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="150dp"
            android:layout_height="210dp"
            android:layout_marginTop="75dp"
            app:srcCompat="@drawable/patient" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="150dp"
            android:layout_height="210dp"
            app:srcCompat="@drawable/doctor"
            android:layout_marginTop="75dp"
            android:layout_gravity="end"/>
    </FrameLayout>




    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:paddingBottom="30dp">


        <android.support.v7.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Get connected with"
            android:lines="1"
            android:textColor="#000"
            android:gravity="center"

            />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/appCompatTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:lines="2"
            android:paddingBottom="21dp"
            android:text="the best Hospitals"

            android:textColor="#9d9ea0" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            >


            <android.support.v7.widget.AppCompatButton
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:id="@+id/btnpatient"
                android:textSize="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Patient"
                android:padding="10dp"
                android:gravity="center"
                style="@style/Base.Widget.AppCompat.Button.Colored"
                />
            <View
                android:layout_width="1dp"
                android:layout_height="28dp"
                android:background="#80000000"
                android:layout_gravity="center_vertical"/>

            <android.support.v7.widget.AppCompatButton
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:id="@+id/btndoctor"
                android:textSize="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Doctor"
                style="@style/Base.Widget.AppCompat.Button.Colored"
                android:padding="10dp"
                android:gravity="center"
                />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>



